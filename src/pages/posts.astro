---
import Layout from '@layouts/Layout.astro'
import PostsComponent from '@components/Posts.astro'
---

<Layout title="Keystatic & Astro's Content Collections">
  <section>
    <div class="container mx-auto my-10 max-w-screen-2xl px-3">
      <header class="space-y-3 text-center">
        <h2 class="text-5xl font-bold">Posts</h2>
        <p>Explore our latest posts</p>
      </header>
      <div class="mt-10">
        <PostsComponent maxPosts={3} />
      </div>
    </div>
  </section>
</Layout>
