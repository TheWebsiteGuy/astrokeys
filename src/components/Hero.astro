---
import { getEntry } from 'astro:content'
import Button from './ui/Button.tsx'

import HeroImage from '@components/HeroImage.astro'
import pageData  from '@content/pages/home.json'
const buttons = pageData?.hero?.buttons || []
const heroImage = pageData?.hero?.heroImage

// Extract the heroImage filename from the path
const heroImagePath = pageData.hero.heroImage || ''
---

<div class="bg-base-200">
  <div class="hero mx-auto max-w-7xl">
    <div class="hero-content max-w-screen-2xl md:py-20">
      <div class="flex flex-col-reverse md:flex-row">
        <div class="flex flex-col items-start gap-6">
          <h1 class="font-anton max-w-3xl text-6xl">{pageData?.hero.heading}</h1>
          <h2 class="text-4xl font-semibold">{pageData?.hero.subheading}</h2>
          <p class="py-3">
            {pageData?.hero.intro}
          </p>
          <div class="flex flex-col items-center justify-center gap-4 lg:flex-row">
            {
              buttons.map((button) => (
                <Button
                  client:load
                  link={button.link}
                  label={button.label}
                  style={button.style}
                  size={button.size}
                  icon={button.icon}
                />
              ))
            }
          </div>
        </div>

        <div class="w-1/2">
          {
            heroImage && (
             <HeroImage 
               imagePath={heroImagePath} 
               altText={pageData?.hero?.heroImageAlt || "Hero Image"} 
             />
            )
          }
        </div>
      </div>
    </div>
  </div>
</div>
